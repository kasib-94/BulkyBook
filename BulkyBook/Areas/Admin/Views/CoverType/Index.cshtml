@model IEnumerable<BulkyBook.Models.CoverType>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="CoverType" class="btn btn-primary">Create New Cover Type   <i class="bi bi-plus-circle"></i></a>
        </div>
    </div>
</div>

<br><br>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
    <tr>
        <th>
            Cover Type Name
        </th>
        
    </tr>
    </thead>
    <tbody>
    @foreach (var obj in Model)
    {
        <tr>
          

            <td width="30%">@obj.Name</td>
            <td class="">
                <div class="group w-75 btn-group">
                    <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> Edit <i class="bi bi-pencil-square"></i></a>
                    <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"> Delete <i class="bi bi-x-square"></i></a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>